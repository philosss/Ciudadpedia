      <h1>The encyclopedia of Spanish provinces</h1>
      <input type="text" name="province" id="province" placeholder="Type here a Spanish province..." />
      <script>
        var options = {

          url: "{{sub}}list_prov.json",

          getValue: function(element) {
            return element.province;
          },

          template: {
            type: "links",
            fields: {
              link: "website-link"
            }
          },

          list: {
            maxNumberOfElements: 5,
            match: {
              enabled: true
            },
            sort: {
              enabled: true
            }
          },

          theme: "square"
        };

        $("#province").easyAutocomplete(options);
      </script>
    </header>
